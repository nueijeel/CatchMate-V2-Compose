<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_received_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        app:cardBackgroundColor="@color/grey0"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <view
                android:id="@+id/iv_item_received_enroll_profile"
                class="de.hdodenhof.circleimageview.CircleImageView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/vec_all_default_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_received_enroll_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/Typography.Body02.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_item_received_enroll_profile"
                tools:text="캐치메이트" />

            <TextView
                android:id="@+id/tv_item_received_enroll_team_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shape_all_rect_r2"
                android:paddingLeft="@dimen/xstiny"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/xstiny"
                android:paddingBottom="1dp"
                android:textAppearance="@style/Typography.Caption01.Medium"
                android:textColor="@color/grey50"
                app:layout_constraintEnd_toStartOf="@+id/tv_item_received_enroll_watch_style"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_received_enroll_nickname"
                tools:text="@string/team_ssg_landers" />

            <TextView
                android:id="@+id/tv_item_received_enroll_watch_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_all_rect_r2"
                android:backgroundTint="@color/brand500"
                android:paddingLeft="@dimen/xstiny"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/xstiny"
                android:paddingBottom="1dp"
                android:textAppearance="@style/Typography.Caption01.Medium"
                android:textColor="@color/grey50"
                app:layout_constraintBottom_toBottomOf="@+id/tv_item_received_enroll_team_badge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_item_received_enroll_team_badge"
                app:layout_constraintTop_toTopOf="@+id/tv_item_received_enroll_team_badge"
                tools:text="@string/badge_glutton" />

            <TextView
                android:id="@+id/tv_item_received_enroll_gender_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/shape_all_rect_r2"
                android:backgroundTint="@color/grey100"
                android:paddingLeft="@dimen/xstiny"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/xstiny"
                android:paddingBottom="1dp"
                android:textAppearance="@style/Typography.Caption01.Medium"
                android:textColor="@color/grey500"
                app:layout_constraintEnd_toStartOf="@+id/tv_item_received_enroll_age_badge"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_received_enroll_team_badge"
                tools:text="@string/female" />

            <TextView
                android:id="@+id/tv_item_received_enroll_age_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_all_rect_r2"
                android:backgroundTint="@color/grey100"
                android:paddingLeft="@dimen/xstiny"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/xstiny"
                android:paddingBottom="1dp"
                android:textAppearance="@style/Typography.Caption01.Medium"
                android:textColor="@color/grey500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/tv_item_received_enroll_gender_badge"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_received_enroll_team_badge"
                tools:text="@string/twenties" />

            <TextView
                android:id="@+id/tv_item_received_enroll_saved_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/Typography.Body02.Medium"
                android:textColor="@color/grey500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_received_enroll_age_badge"
                tools:text="8월 1일 18:12" />

            <EditText
                android:id="@+id/edt_item_received_enroll_description"
                android:layout_width="245dp"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/base"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/base"
                android:background="@drawable/selector_all_edt_bg"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="start|top"
                android:inputType="text"
                android:padding="@dimen/small"
                android:textAppearance="@style/Typography.Body02.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_received_enroll_saved_date_time"
                tools:text="하이 나 김치말이국수 처돌인디" />

            <View
                android:id="@+id/divider_item_received_enroll_horizontal"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/grey100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_item_received_enroll_description" />

            <View
                android:id="@+id/divider_item_received_enroll_vertical"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@color/grey100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_item_received_enroll_horizontal" />

            <TextView
                android:id="@+id/tv_item_received_enroll_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/mypage_received_join_enroll_reject"
                android:textAppearance="@style/Typography.Body02.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/divider_item_received_enroll_vertical"
                app:layout_constraintEnd_toStartOf="@+id/divider_item_received_enroll_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/divider_item_received_enroll_vertical" />

            <TextView
                android:id="@+id/tv_item_received_enroll_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/mypage_received_join_enroll_accept"
                android:textAppearance="@style/Typography.Body02.Medium"
                android:textColor="@color/brand500"
                app:layout_constraintBottom_toBottomOf="@+id/divider_item_received_enroll_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_item_received_enroll_vertical"
                app:layout_constraintTop_toTopOf="@+id/divider_item_received_enroll_vertical" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>